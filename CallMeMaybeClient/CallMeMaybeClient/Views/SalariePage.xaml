<Page x:Class="CallMeMaybeClient.Views.SalariePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewModels="clr-namespace:CallMeMaybeClient.ViewsModels"
      Title="Liste des salariés">
    <Page.DataContext>
        <viewModels:SalarieViewModel />
    </Page.DataContext>

    <Grid>
        <DataGrid ItemsSource="{Binding Salaries}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding nom}" />
                <DataGridTextColumn Header="Prénom" Binding="{Binding prenom}" />
                <DataGridTextColumn Header="Téléphone Fixe" Binding="{Binding telFixe}" />
                <DataGridTextColumn Header="Téléphone Mobile" Binding="{Binding telMobile}" />
                <DataGridTextColumn Header="Email" Binding="{Binding email}" />
                <DataGridTextColumn Header="Service" Binding="{Binding service}" />
                <DataGridTextColumn Header="Site" Binding="{Binding site}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
        

